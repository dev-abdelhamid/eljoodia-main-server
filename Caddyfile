aljodia.com, www.aljodia.com {
    encode gzip
    tls admin@aljodia.com

    # API
    handle /api/* {
        reverse_proxy localhost:3000
    }

    # WebSockets (Socket.io)
    handle /socket.io/* {
        reverse_proxy localhost:3000
    }

    # ملفات الصوت (من السيرفر)
    handle /sounds/* {
        root * /sounds
        file_server
    }

    # ملفات الرفع (لو مستخدمها)
    handle /uploads/* {
        root * /uploads
        file_server
    }

    # كل الباقي → الفرونت إند (React SPA)
    root * /dist
    try_files {path} {path}/ /index.html
    file_server
}
