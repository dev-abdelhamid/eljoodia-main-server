# الدومين الرسمي مع HTTPS تلقائي
aljodia.com, www.aljodia.com {
    # كل الطلبات تروح للـ Node.js
    reverse_proxy localhost:3000

    # Socket.io يشتغل بدون مشاكل
    handle /socket.io/* {
        reverse_proxy localhost:3000 {
            header_up Host {host}
            header_up Upgrade $http_upgrade
            header_up Connection "Upgrade"
        }
    }

    # ملفات الصوت
    handle /sounds/* {
        root * /app/sounds
        file_server
    }

    # هيدرز أمان قوية
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
        -Server
    }

    encode gzip zstd
}

# أي طلب على IP مباشرة → نرجّعه للدومين الرسمي
:80, :443 {
    redir https://aljodia.com{uri} permanent
}